@using MtgApiManager.Lib.Service;
@using MtgApiManager.Lib.Core;
@using MtgApiManager.Lib.Model;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="~/css/styles.css">
    <script type="text/javascript" src="~/js/jquery-3.4.1.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script type="text/javascript" src="~/js/scripts.js"></script>
    <title>Magic Collection</title>
    <link rel="shortcut icon" href="~/img/fire.ico" type="image/x-icon">
</head>
<header>
  <div class"container">
    <div class="jumbotron">
      <video autoplay="autoplay" muted="muted" loop style="width: 100%; height: 800px;">
        <source src="../video/videoGirl.mp4" type="video/mp4">
          <img src="../img/witch.jpg" alt>
      </video>
    </div>
  </div>
  <div class="carousel-item active">
      <img src="~/img/title.png" id="title" alt="title">
  </div>
</header>
<body>
  <div class="container">
    <div class="box">
    </div>
  </div>
<div class="container">
  <div class="row pt-1 pb-1">
      <div class="col-lg-12">
  </div>
</div>
<section>
  <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
      <div class="carousel-inner">
          <div class="carousel-item active">
              <img src="~/img/demon.jpeg" class="d-block w-100" alt="demon">
          </div>
      </div>
  </div>
</section>
<section class="search-sec">
  <div class="container">
    <form action="/cards/search" method="post">
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 p-0">
              <input class="form-control search-slt" type="text" id="column" list="columns" name="column" placeholder="Select" autocomplete="off">
                <datalist id="columns">
                  <option value="name">
                  <option value="colors">
                  <option value="type">
                  <option value="text">
                  <option value="flavor">
                </datalist><h2>
              </div>
              <div class="col-lg-4 col-md-4 col-sm-12 p-0">
                ><label for="search"></label><br>
                <input type="text" class="form-control search-slt" name="search" size="20px" placeholder="Search..."required autocomplete="off"/>
              </div>
              <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                <button type="submit" class="btn btn danger wrn-btn">Search</button>
              </div>
            </div>
          </div>
        </div>
    </form>
  </div>
</section>
  <div class="container" id="links">
    <div class="row">
      <div class="row-md-12">
        <h2><a href="/cards">All cards</a></h2>(warning: load times may crash your browser)<br>
        <h2><a href="/sets">Sets</a></h2>
      </div>
    </div>
  </div>
</body>
</html>
